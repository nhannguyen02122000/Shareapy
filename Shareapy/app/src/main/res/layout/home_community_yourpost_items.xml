<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_cate_1"
    android:layout_margin="5dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/custom_cardview_community">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/tv_activeName"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#427A5B"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_date_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/03/2020 8:00:00 PM"
            android:layout_below="@+id/tv_activeName"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#427A5B"/>

        <Button
            android:id="@+id/btn_register_category"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:textSize="14dp"
            android:layout_height="40dp"
            android:text="Edit"
            android:textColor="#427A5B"
            android:textStyle="bold"
            android:background="@drawable/custom_button_cardview_for_community"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>