<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        card_view:cardElevation="0dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/card_view_demo_txt_title"
                android:id="@+id/txtCardTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtCardTime"
                android:layout_below="@+id/txtCardTitle"
                android:text="@string/card_view_demo_txt_time"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnCardRegister"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAllCaps="false"
                android:layout_below="@+id/txtCardTime"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_cardview"
                android:text="@string/card_view_btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageButton
        android:background="@drawable/custom_button_mark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_bookmark_24dp"
        android:id="@+id/btnMark"
        android:contentDescription="@string/card_view_img_content" />
</RelativeLayout>