<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@drawable/custom_layout_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:text="@string/card_view_demo_txt_title"
            android:id="@+id/txtCmnPostTitle"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtCmnPostTime"
            android:layout_below="@+id/txtCmnPostTitle"
            android:text="@string/card_view_demo_txt_time"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/vieBreak"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/txtCmnPostTime"
            android:layout_width="match_parent"
            android:background="#A6A6A6"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vieBreak"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ToggleButton
                android:layout_weight="1"
                android:id="@+id/btnCommunitySupport"
                style="?android:attr/borderlessButtonStyle"
                android:drawableTop="@drawable/toggle_button_support_community"
                android:background="@drawable/background_transparent"
                android:textAllCaps="false"
                android:textOn="@string/button_support"
                android:textOff="@string/button_support"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorSupport"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ToggleButton
                android:id="@+id/btnCommunityAppreciate"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:drawableTop="@drawable/toggle_button_appreciate_community"
                android:background="@drawable/background_transparent"
                android:textAllCaps="false"
                android:textOff="@string/button_appreciate"
                android:textOn="@string/button_appreciate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAppreciate"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:layout_marginStart="40dp"
        android:src="@drawable/logo_mini"
        android:id="@+id/btnCommunityUser"
        app:civ_border_width="2dp"
        app:civ_border_color="#427A5B"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvUserName_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#427A5B"

        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>